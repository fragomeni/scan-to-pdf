<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/app_file_item">

    <TextView
        android:text="Nome do arquivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/app_file_name"
        android:layout_toLeftOf="@+id/app_file_edit_button"
        android:layout_toStartOf="@+id/app_file_edit_button"
        android:layout_alignTop="@+id/app_file_edit_button"
        android:layout_alignBottom="@+id/app_file_edit_button"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="10dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_delete_black_24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/app_file_delete_button"
        android:background="@android:color/transparent"
        android:tint="@android:color/holo_red_dark" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_create_white_24dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/app_file_delete_button"
        android:layout_toStartOf="@+id/app_file_delete_button"
        android:id="@+id/app_file_edit_button"
        android:background="@android:color/transparent"
        android:tint="@android:color/holo_green_dark"
        android:layout_marginRight="10dp" />
</RelativeLayout>